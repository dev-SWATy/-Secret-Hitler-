<Panel
    id="ready"
    height="20%"
    width="10%"
    color="rgba(0,0,0,0.8)"
    rectAlignment="UpperLeft"
    childAlignment="UpperCenter"
    childForceExpandHeight="false"
    hideAnimation="FadeOut"
    allowDragging="true"
    animationDuration="0.5"
    returnToOriginalPositionWhenReleased="false"
    visibility="White|Brown|Red|Orange|Yellow|Green|Teal|Blue|Purple|Pink|Black"
>
    <Text
        height="20%"
        width="100%"
        color="rgba(1,1,1,0.7)"
        text="Enigma Engine"
        textColor="c"
        fontStyle="Bold"
        fontSize="20"
        rectAlignment="UpperCenter"
    >
    </Text>

    <Text
        height="20%"
        width="100%"
        color="rgba(0.224, 1.0, 0.078, 1)"
        text="| | | Drag me! | | |"
        textColor="#39ff14"
        fontStyle="Italic"
        fontSize="14"
        rectAlignment="LowerCenter"
    >
    </Text>

    <VerticalLayout
        padding="0 0 0 -5"
        height="65%"
        width="90%"
        rectAlignment="MiddleCenter"
        allowDragging="false"
        returnToOriginalPositionWhenReleased="false"
        visibility="White|Brown|Red|Orange|Yellow|Green|Teal|Blue|Purple|Pink|Black"
    >
        <Button
            class="tp50"
            onClick="getOwnDraws"
            color="#4682b4"
            tooltip="My (_(_)||D-.."
            tooltipPosition="Above"
            tooltipBackgroundColor="rgba(0,0,0,1)"
        >
            <Text fontStyle="Bold">
                <textcolor color="#d3d3d3">a) Draw?</textcolor>
            </Text>
        </Button>
        
        <Button
            class="tp50"
            onClick="VoteHistoryUI"
            color="#800020"
            tooltip="Vote History"
            tooltipPosition="Above"
            tooltipBackgroundColor="rgba(0,0,0,1)"
        >
            <Text fontStyle="Bold">
                <textcolor color="#fffdd0">b) Votes?</textcolor>
            </Text>
        </Button>

        <Button
            class="tp50"
            onClick="tellRoleButtonUIB"
            color="#556b2f"
            tooltip="My Role"
            tooltipPosition="Above"
            tooltipBackgroundColor="rgba(0,0,0,1)"
        >
            <Text fontStyle="Bold">
                <textcolor color="#eee8aa">c) Role?</textcolor>
            </Text>
        </Button>
    </VerticalLayout>
</Panel>

